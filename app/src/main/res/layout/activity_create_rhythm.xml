<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRhythmActivity">

    <com.example.rhythmapp.MeasureView
        android:id="@+id/measureView"
        android:layout_width="366dp"
        android:layout_height="168dp"
        android:layout_marginBottom="480dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/quarter_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measureView"
        app:srcCompat="@drawable/quarter_note" />

    <ImageButton
        android:id="@+id/whole_rest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/half_rest_button"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whole_note_button"
        app:layout_constraintVertical_bias="0.234"
        app:srcCompat="@drawable/whole_rest" />

    <ImageButton
        android:id="@+id/sixteenth_rest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/eighth_rest_button"
        app:layout_constraintTop_toBottomOf="@+id/sixteenth_note_button"
        app:layout_constraintVertical_bias="0.163"
        app:srcCompat="@drawable/sixteenth_rest" />

    <ImageButton
        android:id="@+id/half_rest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/quarter_rest_button"
        app:layout_constraintTop_toBottomOf="@+id/half_note_button"
        app:layout_constraintVertical_bias="0.234"
        app:srcCompat="@drawable/half_rest" />

    <ImageButton
        android:id="@+id/quarter_rest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quarter_note_button"
        app:layout_constraintVertical_bias="0.192"
        app:srcCompat="@drawable/quarter_rest" />

    <ImageButton
        android:id="@+id/half_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/quarter_note_button"
        app:layout_constraintTop_toBottomOf="@+id/measureView"
        app:srcCompat="@drawable/half_note" />

    <ImageButton
        android:id="@+id/sixteenth_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/eighth_note_button"
        app:layout_constraintTop_toBottomOf="@+id/measureView"
        app:srcCompat="@drawable/sixteenth_note" />

    <ImageButton
        android:id="@+id/eighth_rest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quarter_rest_button"
        app:layout_constraintTop_toBottomOf="@+id/eighth_note_button"
        app:layout_constraintVertical_bias="0.163"
        app:srcCompat="@drawable/eighth_rest" />

    <ImageButton
        android:id="@+id/whole_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toStartOf="@+id/half_note_button"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measureView"
        app:srcCompat="@drawable/whole_note" />

    <Button
        android:id="@+id/dot_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:text="Dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quarter_rest_button"
        app:layout_constraintVertical_bias="0.174" />

    <Button
        android:id="@+id/remove_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dot_note_button"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quarter_rest_button"
        app:layout_constraintVertical_bias="0.174" />

    <ImageButton
        android:id="@+id/eighth_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/quarter_note_button"
        app:layout_constraintTop_toBottomOf="@+id/measureView"
        app:srcCompat="@drawable/eighth_note" />

    <Button
        android:id="@+id/change_timesig_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Time Signature"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/to_practice_button"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_note_button"
        app:layout_constraintVertical_bias="0.337" />

    <Button
        android:id="@+id/to_practice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="68dp"
        android:text="Practice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dot_note_button"
        app:layout_constraintVertical_bias="0.321" />

</androidx.constraintlayout.widget.ConstraintLayout>